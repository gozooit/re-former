<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, method: 'patch') do |form| %>
  <div class="username">
    <%= form.label :username, "Username :" %>
    <%= form.text_field :username, placeholder: 'JohnDoe'%>
  </div>
  <div class="password">
    <%= form.label :password, "Password :" %>
    <%= form.password_field :password %>
  </div>
  <div class="email">
    <%= form.label :email, "Email :" %>
    <%= form.email_field :email, placeholder: 'JohnDoe@example.com' %>
  </div>
  <%= form.submit "Update" %>
<% end %>
